{
  "name": "sudoku-chess",
  "version": "1.0.0",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "start": "concurrently --kill-others \"yarn client\" \"yarn server\" ",
    "build": "concurrently --kill-others \"yarn build-client\" \"yarn build-server\" ",
    "client": "cd client && yarn start",
    "prod-client": "cd client && yarn build",
    "server": "cd server && nodemon index.ts",
    "prod-server": "cd server && node index.ts"
  },
  "devDependencies": {
    "concurrently": "^5.3.0"
  },
  "dependencies": {
    "nodemon": "^2.0.7"
  }
}
